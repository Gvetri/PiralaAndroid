<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_keyboard_backspace"
                android:tint="@android:color/white"
                android:maxHeight="8sp"
                android:maxWidth="8sp"
                android:id="@+id/back_nav" />
        </android.support.v7.widget.Toolbar>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/hotel3"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del hotel"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:id="@+id/hotel_name" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Inicio de reserva:"
                android:id="@+id/textView8"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:textColor="@color/primary_dark_material_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="22-07-2016"
                android:id="@+id/booking_in"
                android:layout_toRightOf="@+id/textView8"
                android:layout_toEndOf="@+id/textView12"
                android:layout_alignParentStart="false"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_marginLeft="10dp"
                android:textColor="@color/primary_dark_material_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fin de reserva:"
                android:id="@+id/textView10"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_below="@+id/textView8"
                android:textColor="@color/primary_dark_material_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="22-08-2016"
                android:id="@+id/booking_out"
                android:layout_toRightOf="@+id/textView10"
                android:layout_toEndOf="@+id/textView12"
                android:layout_alignParentStart="false"
                android:layout_alignBaseline="@+id/textView10"
                android:layout_marginLeft="10dp"
                android:textColor="@color/primary_dark_material_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Creada el dia:"
                android:id="@+id/textView12"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_below="@+id/textView10"
                android:textColor="@color/primary_dark_material_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="22-08-2016"
                android:id="@+id/created_at"
                android:layout_toRightOf="@+id/textView12"
                android:layout_toEndOf="@+id/textView12"
                android:layout_alignParentStart="false"
                android:layout_alignBaseline="@+id/textView12"
                android:layout_marginLeft="10dp"
                android:textColor="@color/primary_dark_material_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Estado de la reserva:"
                android:id="@+id/textView13"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_below="@+id/textView12"
                android:textColor="@color/primary_dark_material_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Activa"
                android:id="@+id/status"
                android:layout_toRightOf="@+id/textView13"
                android:layout_toEndOf="@+id/textView12"
                android:layout_alignParentStart="false"
                android:layout_alignBaseline="@+id/textView13"
                android:layout_marginLeft="10dp"
                android:textColor="@color/primary_dark_material_light" />

            <android.support.v7.widget.AppCompatButton android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Cancelar reserva"
                android:id="@+id/button"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_below="@+id/textView13"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#f44336"
                android:textColor="#fff"
                android:ellipsize="start" />
        </RelativeLayout>
    </ScrollView>


</LinearLayout>